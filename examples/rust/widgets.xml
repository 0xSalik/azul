<html>
    <head>
        <component name="SideBar">
            <div class="sidebar">
                <div class="logo"></div>
                <div class="sidebar-item"><p>Welcome</p></div>
                <div class="sidebar-item"><p>Widget Showcase</p></div>
                <div class="sidebar-item"><p>OpenGL</p></div>
            </div>
        </component>

        <component name="MainContentArea">
            <div class="main">
                <div class="__azul_native_button">
                    <p>Button</p>
                </div>
                <div class="__azul_native_label">
                    <p>Label</p>
                </div>
                <div class="__azul_native_frame">
                    <p>Frame</p>
                </div>
                <div class="__azul_native_progress_bar">
                    <p>ProgressBar</p>
                </div>
                <div class="__azul_native_check_box">
                    <p>CheckBox</p>
                </div>
                <div class="__azul_native_text_edit">
                    <p>TextEdit</p>
                </div>
                <div class="__azul_native_list_view">
                    <p>ListView</p>
                </div>
                <div class="__azul_native_tab">
                    <p>Tab1</p>
                    <p>Tab2</p>
                </div>
            </div>
        </component>

        <component name="WelcomeScreen">
            <div class="welcome-screen">
                <p id="title">Welcome to the Azul GUI toolkit</p>
                <p id="subtitle">Azul is a free, cross-platform desktop GUI framework for C and Rust using by the Mozilla WebRender rendering engine.</p>
                <div class="links">
                    <p class="link">Website: https://azul.rs</p>
                    <p class="link">Guide: https://azul.rs/guide</p>
                </div>
            </div>
        </component>

        <style>
            body {
                flex-direction: row;
                background: #efefef;
            }

            /* SideBar STYLE */
            .logo {
                width: 200px;
                height: 200px;
                /* background: image("./logo.svg"); */
            }

            .sidebar {
                min-width: 200px;
                background: linear-gradient(135deg, #004e92 0%,#000428 100%);
                padding: 10px;
                font-family: sans-serif;
                font-size: 1.2em;
            }

            .sidebar-item {
                background: white;
                border-radius: 5px;
                padding: 10px;
                margin: 10px;
                box-shadow: 0px 0px 10px black;
                cursor: pointer;
            }

            .sidebar-item:hover {
                color: white;
                background: blue;
            }

            /* WelcomeScreen STYLE*/
            .welcome-screen {
                padding: 10px;
                box-shadow: 0px 0px 10px black;
                background: white;
                min-height: 500px;
            }

            .welcome-screen #title {
                font-size: 3em;
                font-family: "Times New Roman Bold";
            }

            .welcome-screen #subtitle {
                font-size: 1.4em;
                font-family: "Times New Roman";
            }

            .welcome-screen .links .link {
                color: blue;
                font-size: 1.2em;
                cursor: pointer;
            }

            /* MainContentArea STYLE */

        </style>
    </head>

    <body>
        <SideBar/>
        <WelcomeScreen/>
    </body>
</html>
